<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <import type="com.devlee.mymoviediary.domain.use_case.ContentType" />
        <variable
            name="type"
            type="ContentType" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--    비디오 플레이어    -->
        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/diaryDetailPreviewVideo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/black"
            android:visibility="@{type == ContentType.VIDEO ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toTopOf="@+id/diaryDetailSeekBar"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:use_controller="false" />

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/diaryDetailSeekBar"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:clipChildren="false"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:progressDrawable="@drawable/video_seek_bar_drawable"
            android:thumb="@drawable/video_seek_thumb"
            android:visibility="@{type == ContentType.VIDEO ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/diaryDetailPreviewVideo"
            tools:progress="40" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/diaryDetailCountText"
            style="@style/MyDiaryDetailCountTextStyle"
            android:layout_width="43dp"
            android:layout_height="21dp"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:background="@drawable/mydiary_detail_count_text_bg"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/diaryDetailPreviewVideo"
            tools:text="2/4" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/diaryDetailFullScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/full_screen_icon"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginBottom="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/diaryDetailPreviewVideo" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>