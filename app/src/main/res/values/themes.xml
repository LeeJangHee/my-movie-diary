<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/color_1c1c1c</item>
        <item name="colorOnPrimary">@color/color_1c1c1c</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>

        <!--  기본 폰트  -->
        <item name="android:fontFamily">@font/noto_sans_font</item>
        <item name="android:includeFontPadding">false</item>

        <!--   다크모드 disable   -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="AppTheme.NoTitle" parent="AppTheme">
    </style>

    <style name="circleImage">
        <item name="cornerSize">50%</item>
    </style>

    <style name="AppTheme.Cursor" parent="AppTheme">
        <item name="colorAccent">@color/color_999999</item>
    </style>

    <!--  기본 글자 색  -->
    <style name="AppTheme.DefaultTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/color_1c1c1c</item>
        <item name="android:fontFamily">@font/noto_sans_kr_medium</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="AppTheme.DefaultEditStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:textColorHint">@color/color_b9b9b9</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/noto_sans_kr_medium</item>
    </style>

    <!--  AppBar Title Style  -->
    <style name="MainAppbarTitle" parent="AppTheme.DefaultTextStyle">
        <item name="android:fontFamily">@font/noto_sans_kr_bold</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/color_1c1c1c</item>
    </style>

    <style name="SubAppbarTitle" parent="AppTheme.DefaultTextStyle">
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/color_1c1c1c</item>
    </style>

    <!--  메인 아이템 날짜 Style  -->
    <style name="MainItemDayTextStyle" parent="AppTheme.DefaultTextStyle">
        <item name="android:fontFamily">@font/noto_sans_kr_light</item>
        <item name="android:textColor">@color/color_535353</item>
        <item name="android:textSize">9dp</item>
    </style>

    <!--  Category  -->
    <style name="CategoryTitleStyle" parent="AppTheme.DefaultTextStyle">
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="CategoryEditStyle" parent="AppTheme.DefaultEditStyle">
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:hint">@string/category_edit_hint_text</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="CategorySwipeMenuTextStyle" parent="AppTheme.DefaultTextStyle">
        <item name="android:layout_width">@dimen/dp_56</item>
        <item name="android:layout_height">@dimen/dp_56</item>
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:textSize">14dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--  Dialog  -->
    <style name="DialogTitleStyle" parent="AppTheme.DefaultTextStyle">
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/color_de000000</item>
        <item name="android:lineHeight" tools:ignore="NewApi">24dp</item>
        <item name="android:layout_marginTop">@dimen/dp_24</item>
    </style>

    <style name="DialogButtonTextStyle" parent="AppTheme.DefaultTextStyle">
        <item name="android:textSize">16dp</item>
        <item name="android:lineHeight" tools:ignore="NewApi">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DialogMessageTextStyle" parent="AppTheme.DefaultTextStyle">
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:textSize">14dp</item>
        <item name="android:lineHeight" tools:ignore="NewApi">20dp</item>
        <item name="android:textColor">@color/color_99000000</item>
    </style>

    <!--  Create Content  -->
    <style name="CreateCategoryDefaultStyle" parent="AppTheme.DefaultTextStyle">
        <item name="android:textColor">@color/color_999999</item>
        <item name="android:textSize">@dimen/dp_16</item>
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
    </style>

    <style name="CreateContentEditStyle" parent="AppTheme.DefaultEditStyle">
        <item name="android:singleLine">false</item>
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:hint">@string/create_content_hint</item>
        <item name="android:textColorHint">@color/color_c3c3c3</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="CreateCategorySelectedStyle" parent="CategoryTitleStyle">

    </style>

    <style name="CreateItemTextStyle" parent="AppTheme.DefaultTextStyle">
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="CreateBottomSheetTextStyle" parent="AppTheme.DefaultTextStyle">
        <item name="android:textSize">17dp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
    </style>

    <!--  BottomSheetDialog background theme  -->
    <style name="BottomSheet.Base.Light" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CalendarDialogStyle" parent="AppTheme.DefaultTextStyle">
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:textSize">18dp</item>
    </style>

</resources>