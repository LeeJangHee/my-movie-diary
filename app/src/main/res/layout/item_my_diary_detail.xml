<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <import type="com.devlee.mymoviediary.domain.use_case.ContentType" />
        <variable
            name="type"
            type="ContentType" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/diaryDetailPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/diaryDetailSeekBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!--    비디오 플레이어    -->
            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/diaryDetailPreviewVideo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/black"
                android:visibility="@{type == ContentType.VIDEO ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="16:9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:use_controller="false" />

            <!--    오디오 플레이어    -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/diaryDetailAudioView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/color_efefef"
                android:visibility="@{type == ContentType.AUDIO ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="@+id/diaryDetailPreview"
                app:layout_constraintDimensionRatio="3:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/diaryDetailPreview"
                tools:visibility="invisible">

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/diaryDetailAudioSeekbar"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:layout_marginTop="24dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:progressDrawable="@drawable/audio_seek_bar_drawable"
                    android:thumb="@drawable/audio_seek_thumb"
                    app:layout_constraintBottom_toTopOf="@+id/audioPlayButton"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"
                    tools:progress="40" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/currentTimeline"
                    style="@style/ContentChoiceAudioTimelineTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:layout_constraintStart_toStartOf="@+id/diaryDetailAudioSeekbar"
                    app:layout_constraintTop_toBottomOf="@id/diaryDetailAudioSeekbar"
                    tools:text="0:33" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/totalTimeline"
                    style="@style/ContentChoiceAudioTimelineTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toEndOf="@+id/diaryDetailAudioSeekbar"
                    app:layout_constraintTop_toBottomOf="@id/diaryDetailAudioSeekbar"
                    tools:text="0:33" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/audioPlayButton"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/ic_play"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/diaryDetailAudioSeekbar" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/diaryDetailSeekBar"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:clipChildren="false"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:progressDrawable="@drawable/video_seek_bar_drawable"
            android:thumb="@drawable/video_seek_thumb"
            android:visibility="@{type == ContentType.VIDEO ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/diaryDetailPreview"
            tools:progress="40" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>