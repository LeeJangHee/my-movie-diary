<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/color_1c1c1c</item>
        <item name="colorOnPrimary">@color/color_1c1c1c</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!--  기본 폰트  -->
        <item name="android:fontFamily">@font/noto_sans_font</item>
        <item name="android:includeFontPadding">false</item>

        <!--   다크모드 disable   -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="AppTheme.NoTitle" parent="AppTheme">
    </style>

    <!--  기본 글자 색  -->
    <style name="DefaultTextStyle">
        <item name="android:textColor">@color/color_1c1c1c</item>
        <item name="android:fontFamily">@font/noto_sans_kr_medium</item>
        <item name="android:textSize">12dp</item>
    </style>

    <!--  AppBar Title Style  -->
    <style name="MainAppbarTitle" parent="DefaultTextStyle">
        <item name="android:fontFamily">@font/noto_sans_kr_bold</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="SubAppbarTitle" parent="DefaultTextStyle">
        <item name="android:textSize">17dp</item>
    </style>

    <!--  메인 아이템 날짜 Style  -->
    <style name="MainItemDayTextStyle" parent="DefaultTextStyle">
        <item name="android:fontFamily">@font/noto_sans_kr_light</item>
        <item name="android:textColor">@color/color_535353</item>
        <item name="android:textSize">9dp</item>
    </style>

    <!--  Category  -->
    <style name="CategoryTitleStyle" parent="DefaultTextStyle">
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:textSize">16dp</item>
    </style>
</resources>